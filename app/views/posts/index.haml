%div
  %h2
    - if current_user
      - if params[:all_users] && params[:tag]
        = "Bookmarks in " + params[:tag]
      - elsif params[:username]
        - if (current_user.name == params[:username])
          Your Bookmarks
        - else
          = params[:username] + "'s Bookmarks "
      - else
        Your Bookmarks
    - elsif params[:username]
      = params[:username] + "'s Bookmarks "
    - elsif params[:tag]
      = "Bookmarks in " + params[:tag]
    - else
      Some bookmarks
    = '(' + @posts_count.to_s + ')'

  
  - if (params[:tag] || params[:username] || params[:fromdt] || params[:todt] || params[:page])
    - if current_user
      - cache(:fragment => params.to_s + "_#{current_user.id}_posts", :expires_in => 10.minute) do
        = render "posts/posts_short", :posts => @posts
      .pagination
        = will_paginate(@posts)
    - else
      - cache(:fragment => params.to_s + "_#{current_user.id}_posts", :expires_in => 10.minute) do
        = render "posts/posts_short", :posts => @posts
      .pagination
        = will_paginate(@posts)
  - else
    - if current_user
      - cache(:fragment => "all_user_#{current_user.id}_posts", :expires_in => 3.minute) do
        = render "posts/posts_short", :posts => @posts
      .pagination
        = will_paginate(@posts)
    - else
      - cache(:fragment => "public_all_posts", :expires_in => 3.minute) do
        = render "posts/posts_short", :posts => @posts
      .pagination
        = will_paginate(@posts)
.clear